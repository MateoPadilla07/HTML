program AreaTriangulo;

var

base, altura, area; real;

begin
 writeln('Ingrese la base del triangulo');
 readln(base);
 
 writeln('Ingrese la altura del triangulo');
 readln(altura);
 
 writeln('Ingrese la area del triangulo');
 readln(altura);

 area:= (base * altura) / 2;
 writeln ('El area del triangulo es: ', area:0:2);

end.